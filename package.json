{
  "name": "sa-devops-app",
  "version": "0.0.1",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "description": "App for DevOps Model",
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/audit-logging": "^5",
    "@sap/hana-client": "^2",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3",
    "passport": "^0.4.1",

    "debug": "^4.3",
    "express": "^4"
  },
  "devDependencies": {
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "npx cds run"
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "joe": {
              "roles": [
                "Admin",
                "Viewer"
              ]
            },
            "julie": {
              "roles": [
                "Viewer"
              ]
            },
            "bob": {
              "roles": [
                "Viewer"
              ]
            }
          }
        }
      }
      ,
      "db": {
        "[production]": {
          "kind": "hana"
        },
        "[development]": {
          "kind": "sql"
        },
        "model": [
          "db",
          "srv"
        ]
      },
      "NearEarthObjectWebService": {
        "kind": "rest",
        "impl": "srv/external/NearEarthObjectWebService.js",
        "credentials": {
          "[production]": {
            "destination": "sa-devops-app-NASA-api",
            "path": "neo/rest/v1"
          },
          "[development]": {
            "url": "https://api.nasa.gov/neo/rest/v1"
          }
        }
      },
      "xsuaa_api": {
        "kind": "rest",
        "credentials": {
            "destination": "xsuaa_api",
            "path": "/userinfo"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
